<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TestApp.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Margin="20,0,20,80">
            <Label Text="Password Reset" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center"></Label>
            <Label Text="You will receive further instructions to the below mail."
                   FontSize="15" FontAttributes="Bold" Margin="0,10,0,0"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="Center"></Label>

            <Entry x:Name="email" Placeholder="Your Email address"
                   FontSize="18" Margin="20,40,20,0"
                   HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" />
            <Button Text="SEND" Clicked="SendButton_Clicked" BackgroundColor="Green" TextColor="White" Margin="20,20,20,0"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
